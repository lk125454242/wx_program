.wonderful_video{
  padding: 0 0.46875rem;
  height: 7rem;
  width: 100%;
  display: flex;
}
.wonderful_image{
  height: 5.125rem;
  min-width: 48%;
  margin: 0 0.23rem;
}
.wonderful_name{
  font-size: 0.625rem;
  width: 100%;
}
.corner{/* 角标 */
  position: absolute;
  right: 0;
  bottom: 0;
  width: 1.8125rem;
  height: 0.875rem;
  line-height: 0.875rem;
  text-align: center;
  background-color: #000000;
  color: white;
}
.more{
  height: 2.9375rem;
  line-height: 2.9375rem;
  font-size: 0.6875rem;
  text-align: center;
  color: #e2e2e2;
}
/* 课程预告 */

/* 课程列表 */
.class_list{
  margin: 0.9375rem 0;
  height: 3.6875rem;
}
.class_list_image_container{
  width: 32%;
  height: 100%;
}
.class_list_image{
  width: 100%;
  height: 100%;
}
.class_list_text_container{
  margin-left: 0.9375rem;
  width: 62.5%;
  height: 100%;
  position: relative;
}
.class_list_title{
  font-weight: bold;
  font-size: 0.75rem;
  height: 0.75rem;
  line-height: 0.75rem;
}
.class_list_decration{
  margin-top: 0.375rem;
  font-size: 0.6875rem;
  height: 0.6875rem;
  line-height: 0.6875rem;
  color: #c3c3c3;
}
.class_list_time{
  position: absolute;
  bottom: 0rem;
  left: 0;
  color: #E50012;
  height: 0.625rem;
  line-height: 0.625rem;
  font-size: 0.625rem;
}
/* 往期回顾 */
.scroll-view_H{
  white-space: nowrap; display: flex

}
.scroll-view-item_H{
  width: 10.5rem;
  margin-left: 0.6875rem;
  display: inline-block;
}
.class_back_image{
  margin: 0.5rem 0.625rem 0.5rem 0;
  height: 5.9375rem;
  width: 100%;
}
.class_back_decration{
  margin-top: 0.375rem;
  font-size: 0.6875rem;
  line-height: 0.6875rem;
  width: 100%;
  height: 1.375rem;
  overflow: hidden;
  color: #b6b6b6;
}
.class_back_title inline{
  height: 0.75rem;
  line-height: 0.75rem;
  font-weight: bold;
}
